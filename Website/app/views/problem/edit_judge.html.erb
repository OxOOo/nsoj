<h1 class="text-center"><%= "##{@problem.id}. #{@problem.name}" %></h1>
<%= form_for @problem, url: problem_edit_judge_path(@problem), method: :post, html: {class: "form-horizontal"} do |f| %>
  <fieldset>
    <legend>评测信息</legend>
    <%= render 'template/form_errors', :errors=>@problem.errors %>
    <%= render "judge_#{@problem.problem_type.id}", :f=>f %>
		<div class="form-group">
		  <label class="col-sm-2 control-label">提交文件大小限制(B)</label>
		  <div class="col-sm-3">
		  	<%= f.number_field :answer_limit, class: "form-control", placeholder: "请输入提交文件大小限制" %>
		  </div>
		</div>
		<div class="form-group">
		  <label class="col-sm-2 control-label">
		    测试数据
		    <sub><%= link_to "原数据", @problem.data_file if @problem.data_file %></sub>
		  </label>
		  <div class="col-sm-3">
		    <%= f.file_field :data %>
		  </div>
		</div>
		<div class="form-group">
		  <div class="col-sm-offset-2 col-sm-3">
		    <div class="checkbox">
		      <label>
		      	<%= f.check_box :submit %>可以评测
		      </label>
		    </div>
		  </div>
		</div>
		<div class="form-group">
		  <div class="col-sm-offset-2 col-sm-3">
		    <%= f.submit "确定", class: "btn btn-default" %>
		    <button class="btn btn-success histroy-back">上一步</button>
		  </div>
		</div>
  </fieldset>
<% end %>
