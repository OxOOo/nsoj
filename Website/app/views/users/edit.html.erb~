<%= form_for @user, url: users_edit_path, html: {class: "form-horizontal"} do |f| %>
  <fieldset>
    <legend>修改密码</legend>
    <%= render partial: 'template/table_errors', locals: {errors: @user.errors} %>
    <div class="form-group">
		  <label class="col-sm-2 control-label">用户名</label>
		  <div class="col-sm-3">
		  	<%= f.text_field :username, class: "form-control", value: @user.username, disabled: "" %>
		  </div>
		</div>
		<div class="form-group">
		  <label class="col-sm-2 control-label"><span style="color:red">*</span>原密码</label>
		  <div class="col-sm-3">
		  	<input type="user[old_password]" class="form-control" id="user_old_password" placeholder="请输入原密码">
		  </div>
		</div>
		<div class="form-group">
		  <label class="col-sm-2 control-label"><span style="color:red">*</span>新密码</label>
		  <div class="col-sm-3">
		  	<%= f.password_field :password, class: "form-control", placeholder: "请输入新密码" %>
		  </div>
		</div>
		<div class="form-group">
		  <label class="col-sm-2 control-label"><span style="color:red">*</span></label>
		  <div class="col-sm-3">
		  	<%= f.password_field :password_confirmation, class: "form-control", placeholder: "请再次输入新密码" %>
		  </div>
		</div>
		<div class="form-group">
		  <div class="col-sm-offset-2 col-sm-3">
		    <button type="submit" class="btn btn-default">提交</button>
		  </div>
		</div>
  </fieldset>
<% end %>
