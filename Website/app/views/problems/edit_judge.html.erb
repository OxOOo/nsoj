<h1 class="text-center"><%= "##{@problem.id}. #{@problem.title}" %></h1>
<%= form_for @problem, url: problems_edit_judge_path(@problem), html: {class: "form-horizontal"} do |f| %>
  <fieldset>
    <legend>测试信息</legend>
    <%= render partial: 'template/table_errors', locals: {errors: @problem.errors} %>
    <%= render partial: "judge_#{@problem.problem_type.id}", locals: {f: f} %>
		<div class="form-group">
		  <label class="col-sm-2 control-label">提交文件大小限制(B)</label>
		  <div class="col-sm-3">
		  	<%= f.number_field :submit_limit, class: "form-control", placeholder: "请输入提交文件大小限制" %>
		  </div>
		</div>
		<div class="form-group">
		  <label class="col-sm-2 control-label">测试数据</label>
		  <div class="col-sm-3">
		    <%= f.file_field :data %>
		  </div>
		</div>
		<div class="form-group">
		  <div class="col-sm-offset-2 col-sm-3">
		    <div class="checkbox">
		      <label>
		      	<%= f.check_box :judge %>可以评测
		      </label>
		    </div>
		  </div>
		</div>
		<div class="form-group">
		  <div class="col-sm-offset-2 col-sm-3">
		    <%= f.submit "确定", class: "btn btn-default" %>
		    <button class="btn btn-success histroy-back">上一步</button>
		  </div>
		</div>
  </fieldset>
<% end %>
