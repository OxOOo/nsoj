<!-- Modal -->
<div class="modal fade" id="submitModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
      	<%= form_for :status, url: problems_single_path(@problem) do |f| %>
					<div class="container-fluid">
						<div class="form-group">
							<%= f.select :language, options_from_collection_for_select(@problem.problem_type.languages, "id", "title"), {}, {class: "form-control" } %>
						</div>
						<div class="form-group">
							<pre><%= @problem.front_slightly %></pre>
							<%= f.text_area :submit, class: "form-control", rows: "20" %>
							<pre><%= @problem.back_slightly %></pre>
						</div>
						<%= f.submit "提交", class: "pull-right btn btn-default" %>
					</div>
				<% end %>
      </div>
    </div>
  </div>
</div>
