<table class="table table-striped table-hover">
  <thead>
    <tr>
		  <th width="50%">标题</th>
		  <th width="20%">发表者</th>
		  <th width="15%">发表日期</th>
		  <th width="15%">最近修改</th>
	  </tr>
	</thead>
	<tbody>
	  <% blogs.each do |blog| %>
	    <tr>
	      <td><%= link_to blog.title, blog_single_path(blog) %></td>
	      <td><%= link_to blog.user.nickname, user_datum_path(blog.user) %></td>
	      <td><%= format_datetime(blog.created_at) %></td>
	      <td><%= format_datetime(blog.updated_at) %></td>
	    </tr>
	  <% end %>
	  <% if blogs.size == 0 %>
	    <tr><td class="text-center" colspan="4" >无</td></tr>
	  <% end %>
	</tbody>
</table>
