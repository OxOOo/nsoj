<table class="table table-striped table-bordered text-center">
	<thead>
		<tr>
			<th>比赛名称</th>
			<th>开始时间</th>
			<th>结束时间</th>
			<th>比赛时长</th>
		</tr>
	</thead>
	<tbody>
		<% if contests.any? %>
			<% contests.each do |contest| %>
				<tr>
					<td><%= contest.name %></td>
					<td><%= format_time(contest.start_time) %></td>
					<td><%= format_time(contest.end_time) %></td>
					<td><%= friendly_duration(contest.end_time-contest.start_time) %></td>
				</tr>
			<% end %>
		<% else %>
			<tr>
				<td colspan="4"><%= friendly_duration((Time.now+231.day+1.minute)-Time.now) %></td>
			</tr>
		<% end %>
	</tbody>
</table>
