<table class="table table-striped table-hover table-text-center">
  <thead>
    <tr>
      <th width="5%">排名</th>
      <th width="15%">昵称</th>
      <th width="50%">签名</th>
      <th width="10%">通过的题数</th>
      <th width="10%">通过的次数</th>
      <th width="10%">提交的次数</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <% @offset = @offset + 1 %>
      <tr>
        <td><%= link_to @offset, user_datum_path(user) %></td>
        <td><%= link_to user.nickname, user_datum_path(user) %></td>
        <td><%= user.sign %></td>
        <td><%= user.solved_count %></td>
        <td><%= user.accepted_count %></td>
        <td><%= user.submissions_count %></td>
      </tr>
    <% end %>
    <% if @users.size == 0 %>
      <tr>
        <td colspan="6">无</td>
      </tr>
    <% end %>
  </tbody>
</table>
