<div class="row">
	<div class="col-sm-1 text-right">
		<small>发信人：</small>
	</div>
	<div class="col-sm-3">
		<label><%= @message.sender.nickname %></label>
	</div>
</div>
<div class="row">
	<div class="col-sm-1 text-right">
		<small>收信人：</small>
	</div>
	<div class="col-sm-3">
		<label><%= @message.receiver.nickname %></label>
	</div>
</div>
<div class="row">
	<div class="col-sm-1 text-right">
		<small>发信时间：</small>
	</div>
	<div class="col-sm-3">
		<small><%= format_datetime(@message.created_at) %></small>
	</div>
</div>
<div class="row">
	<div class="col-sm-1 text-right">
		<small>读信时间：</small>
	</div>
	<div class="col-sm-3">
		<small><%= (@message.read==true)?format_datetime(@message.updated_at):("未读") %></small>
	</div>
</div>
<div class="panel panel-default">
  <div class="panel-body">
    <%= simple_format @message.message %>
  </div>
</div>

<%= render 'send_message' %>
